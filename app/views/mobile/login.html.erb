<div id="content">
  <h2>Sign in</h2>
  <% params = {:controller => "mobile", :action => "authenticate"} %>
  <% if request.mobile.is_a? Jpmobile::Mobile::Docomo then %>
  <%   params["guid"] = "on" %>
  <% end %>
  <% form_tag params do %>
    <dt><label for="username">Username</label></dt>

    <dd><%= text_field_tag "username" %></dd>
    <dt><label for="password">Password</label></dt>
    <dd><%= password_field_tag "password" %></dd>
    </dl>
    <%= check_box_tag "remember_me" %><label for="remember_me">Remember me</label>
    <div class="submit"><%= submit_tag "Sign In" %></div>
  <% end %>
   <div class="section">
     <a href="/signup">Create new account</a>
   </div>

   <div style="clear: both"></div>

</div>


</div>

